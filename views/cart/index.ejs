    .cart-item .row > div {
        margin-bottom: 1rem;
    }
    
    .cart-item-image {
        width: 60px;
        height: 60px;
    }
    
    .quantity-controls-cart {
        justify-content: flex-start;
    }
    
    .sticky-top {
        position: relative !important;
        top: auto !important;
    }
}
</style>

<script>
// Update cart quantity
function updateCartQuantity(productId, change, newValue = null) {
    const qtyInput = document.getElementById(`cart-qty-${productId}`);
    let quantity;
    
    if (newValue !== null) {
        quantity = parseInt(newValue);
    } else {
        let currentQty = parseInt(qtyInput.value) || 1;
        quantity = currentQty + change;
    }
    
    // Ensure quantity stays within bounds
    const min = parseInt(qtyInput.getAttribute('min')) || 1;
    const max = parseInt(qtyInput.getAttribute('max')) || 999;
    
    if (quantity < min) quantity = min;
    if (quantity > max) quantity = max;
    
    // Update input value
    qtyInput.value = quantity;
    
    // Send update to server
    fetch('/cart/update', {
        method: 'PUT',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({
            productId: productId,
            quantity: quantity
        })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Reload page to reflect changes
            location.reload();
        } else {
            alert(data.message || 'Error updating cart');
            // Revert input value on error
            location.reload();
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Error updating cart');
        location.reload();
    });
}

// Remove item from cart
function removeFromCart(productId, productName) {
    if (!confirm(`Remove ${productName} from cart?`)) {
        return;
    }
    
    fetch(`/cart/remove/${productId}`, {
        method: 'DELETE',
        headers: {
            'Content-Type': 'application/json',
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Remove item from DOM or reload page
            location.reload();
        } else {
            alert(data.message || 'Error removing item');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Error removing item');
    });
}

// Request quote functionality
function requestQuote() {
    if (confirm('Request a quote for these items? This will help our staff provide you with the best pricing and recommendations.')) {
        // Redirect to appointment booking with quote request
        window.location.href = '/appointments/new?type=quote';
    }
}

// Checkout functionality
document.addEventListener('DOMContentLoaded', function() {
    const checkoutBtn = document.querySelector('.checkout-btn');
    if (checkoutBtn) {
        checkoutBtn.addEventListener('click', function() {
            // For now, show coming soon message
            alert('Checkout functionality coming soon! Please visit our clinic or call to place your order.');
        });
    }
});
</script>

