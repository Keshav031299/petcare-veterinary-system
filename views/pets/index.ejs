<%- include('../partials/header') %>
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-paw me-2"></i>Pets</h1>
        <a href="/pets/new" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Add New Pet
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <% if (pets.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Species</th>
                                <th>Breed</th>
                                <th>Age</th>
                                <th>Gender</th>
                                <th>Owner</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% pets.forEach(pet => { %>
                                <tr>
                                    <td>
                                        <strong><%= pet.name %></strong>
                                        <% if (pet.species === 'Dog') { %>
                                            <i class="fas fa-dog text-primary ms-2"></i>
                                        <% } else if (pet.species === 'Cat') { %>
                                            <i class="fas fa-cat text-warning ms-2"></i>
                                        <% } else { %>
                                            <i class="fas fa-paw text-success ms-2"></i>
                                        <% } %>
                                    </td>
                                    <td><%= pet.species %></td>
                                    <td><%= pet.breed %></td>
                                    <td><%= pet.age %> years</td>
                                    <td>
                                        <% if (pet.gender === 'Male') { %>
                                            <i class="fas fa-mars text-primary me-1"></i>
                                        <% } else { %>
                                            <i class="fas fa-venus text-danger me-1"></i>
                                        <% } %>
                                        <%= pet.gender %>
                                    </td>
                                    <td><%= pet.owner.firstName %> <%= pet.owner.lastName %></td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/pets/<%= pet._id %>" class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="/pets/<%= pet._id %>/edit" class="btn btn-sm btn-outline-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="POST" action="/pets/<%= pet._id %>?_method=DELETE" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="fas fa-paw fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No pets found</h4>
                    <p class="text-muted">Start by adding your first pet</p>
                    <a href="/pets/new" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Add First Pet
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</div>
<%- include('../partials/footer') %> 
