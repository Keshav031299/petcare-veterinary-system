<%- include('../partials/header') %>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="fas fa-paw me-2"></i><%= pet.name %>
            <% if (pet.species === 'Dog') { %>
                <i class="fas fa-dog text-primary ms-2"></i>
            <% } else if (pet.species === 'Cat') { %>
                <i class="fas fa-cat text-warning ms-2"></i>
            <% } else { %>
                <i class="fas fa-paw text-success ms-2"></i>
            <% } %>
        </h1>
        <div class="btn-group">
            <a href="/pets" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Pets
            </a>
            <a href="/pets/<%= pet._id %>/edit" class="btn btn-warning">
                <i class="fas fa-edit me-2"></i>Edit
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Pet Information -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Pet Information
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <td><strong>Name:</strong></td>
                            <td><%= pet.name %></td>
                        </tr>
                        <tr>
                            <td><strong>Species:</strong></td>
                            <td><%= pet.species %></td>
                        </tr>
                        <tr>
                            <td><strong>Breed:</strong></td>
                            <td><%= pet.breed %></td>
                        </tr>
                        <tr>
                            <td><strong>Age:</strong></td>
                            <td><%= pet.age %> years</td>
                        </tr>
                        <tr>
                            <td><strong>Weight:</strong></td>
                            <td><%= pet.weight %> kg</td>
                        </tr>
                        <tr>
                            <td><strong>Color:</strong></td>
                            <td><%= pet.color %></td>
                        </tr>
                        <tr>
                            <td><strong>Gender:</strong></td>
                            <td>
                                <% if (pet.gender === 'Male') { %>
                                    <i class="fas fa-mars text-primary me-1"></i>
                                <% } else { %>
                                    <i class="fas fa-venus text-danger me-1"></i>
                                <% } %>
                                <%= pet.gender %>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <!-- Owner Information -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user me-2"></i>Owner Information
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <td><strong>Name:</strong></td>
                            <td>
                                <a href="/owners/<%= pet.owner._id %>">
                                    <%= pet.owner.firstName %> <%= pet.owner.lastName %>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Email:</strong></td>
                            <td><a href="mailto:<%= pet.owner.email %>"><%= pet.owner.email %></a></td>
                        </tr>
                        <tr>
                            <td><strong>Phone:</strong></td>
                            <td><a href="tel:<%= pet.owner.phone %>"><%= pet.owner.phone %></a></td>
                        </tr>
                        <% if (pet.owner.address && pet.owner.address.city) { %>
                        <tr>
                            <td><strong>City:</strong></td>
                            <td><%= pet.owner.address.city %></td>
                        </tr>
                        <% } %>
                    </table>
                    <a href="/owners/<%= pet.owner._id %>" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-eye me-1"></i>View Owner Details
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Medical History -->
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-notes-medical me-2"></i>Medical History
                    </h5>
                    <button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#medicalModal">
                        <i class="fas fa-plus me-1"></i>Add Record
                    </button>
                </div>
                <div class="card-body">
                    <% if (pet.medicalHistory && pet.medicalHistory.length > 0) { %>
                        <% pet.medicalHistory.sort((a, b) => new Date(b.date) - new Date(a.date)).forEach(record => { %>
                            <div class="border-start border-3 border-primary ps-3 mb-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1"><%= record.condition %></h6>
                                        <p class="text-muted mb-1">
                                            <i class="fas fa-calendar me-1"></i>
                                            <%= record.date.toDateString() %>
                                        </p>
                                        <% if (record.treatment) { %>
                                            <p class="mb-1"><strong>Treatment:</strong> <%= record.treatment %></p>
                                        <% } %>
                                        <% if (record.notes) { %>
                                            <p class="mb-0 text-muted"><%= record.notes %></p>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="text-center py-4">
                            <i class="fas fa-notes-medical fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No medical history</h5>
                            <p class="text-muted">Add the first medical record for <%= pet.name %></p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Appointments -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-calendar me-2"></i>Recent Appointments
                    </h5>
                    <a href="/appointments/new" class="btn btn-sm btn-primary">
                        <i class="fas fa-plus me-1"></i>Schedule Appointment
                    </a>
                </div>
                <div class="card-body">
                    <% if (appointments.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Reason</th>
                                        <th>Status</th>
                                        <th>Veterinarian</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% appointments.forEach(appointment => { %>
                                        <tr>
                                            <td><%= appointment.appointmentDate.toDateString() %></td>
                                            <td><%= appointment.appointmentTime %></td>
                                            <td><%= appointment.reason %></td>
                                            <td>
                                                <% let badgeClass = 'bg-secondary'; %>
                                                <% if (appointment.status === 'Scheduled') badgeClass = 'bg-primary'; %>
                                                <% if (appointment.status === 'Completed') badgeClass = 'bg-success'; %>
                                                <% if (appointment.status === 'Cancelled') badgeClass = 'bg-danger'; %>
                                                <span class="badge <%= badgeClass %>"><%= appointment.status %></span>
                                            </td>
                                            <td><%= appointment.veterinarian %></td>
                                            <td>
                                                <a href="/appointments/<%= appointment._id %>" class="btn btn-sm btn-outline-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No appointments found</h5>
                            <p class="text-muted">Schedule the first appointment for <%= pet.name %></p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Medical History Modal -->
<div class="modal fade" id="medicalModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Medical Record</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="POST" action="/pets/<%= pet._id %>/medical">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="condition" class="form-label">Condition *</label>
                        <input type="text" class="form-control" id="condition" name="condition" required>
                    </div>
                    <div class="mb-3">
                        <label for="treatment" class="form-label">Treatment</label>
                        <textarea class="form-control" id="treatment" name="treatment" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="notes" class="form-label">Notes</label>
                        <textarea class="form-control" id="notes" name="notes" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Save Record</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 
