                                    <% if (product.isOnSale) { %>
                                        <% let discountPercentage = 0; %>
                                        <% if (product.originalPrice && product.originalPrice > product.price) { %>
                                            <% discountPercentage = Math.round(((product.originalPrice - product.price) / product.originalPrice) * 100); %>
                                        <% } %>
                                        <span class="badge bg-danger">Sale -<%= discountPercentage %>%</span>
                                    <% } %>
                                    <% if (product.isFeatured) { %>
                                        <span class="badge bg-warning">Featured</span>
                                    <% } %>
                                    <% if (product.veterinarianRecommended) { %>
                                        <span class="badge bg-success">
                                            <i class="fas fa-user-md me-1"></i>Vet Recommended
                                        </span>
                                    <% } %>
                                    <% if (!product.inStock) { %>
                                        <span class="badge bg-secondary">Out of Stock</span>
                                    <% } %>
                                </div>
                            </div>
                            
