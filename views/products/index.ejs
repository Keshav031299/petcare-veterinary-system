<%- include('../partials/header', { title: title }) %>

<div class="products-page">
    <!-- Hero Section -->
    <section class="products-hero">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="hero-title">üõçÔ∏è Pet Products & Supplies</h1>
                    <p class="hero-subtitle">Everything your furry, feathered, and scaled friends need to live their best lives</p>
                    <p class="currency-note"><i class="fas fa-info-circle me-2"></i>All prices in Mauritian Rupees (MUR)</p>
                </div>
                <div class="col-lg-6">
                    <img src="https://images.unsplash.com/photo-1601758228041-f3b2795255f1?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                         alt="Pet supplies" class="hero-image">
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Products -->
    <% if (featuredProducts && featuredProducts.length > 0) { %>
    <section class="featured-section py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-4">
                    <h2 class="section-title">‚≠ê Featured Products</h2>
                    <p class="section-subtitle">Our most popular and recommended items</p>
                </div>
            </div>
            <div class="row g-4">
                <% featuredProducts.forEach(product => { %>
                    <div class="col-lg-3 col-md-6">
                        <div class="product-card featured">
                            <div class="product-image">
                                <% if (product.images && product.images.length > 0) { %>
                                    <img src="<%= product.images[0].url %>" alt="<%= product.images[0].alt %>" class="card-img">
                                <% } else { %>
                                    <img src="https://images.unsplash.com/photo-1601758228041-f3b2795255f1?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" 
                                         alt="<%= product.name %>" class="card-img">
                                <% } %>
                                <div class="product-badges">
                                    <span class="badge bg-warning">Featured</span>
                                    <% if (product.isOnSale) { %>
                                        <span class="badge bg-danger">Sale</span>
                                    <% } %>
                                    <% if (product.veterinarianRecommended) { %>
                                        <span class="badge bg-success">Vet Recommended</span>
                                    <% } %>
                                </div>
                            </div>
                            <div class="product-info">
                                <h5 class="product-title"><%= product.name %></h5>
                                <p class="product-brand"><%= product.brand %></p>
                                <div class="product-rating">
                                    <% if (product.rating && product.starRating) { %>
                                        <% for (let i = 0; i < product.starRating.full; i++) { %>
                                            <i class="fas fa-star text-warning"></i>
                                        <% } %>
                                        <% if (product.starRating.half > 0) { %>
                                            <i class="fas fa-star-half-alt text-warning"></i>
                                        <% } %>
                                        <% for (let i = 0; i < product.starRating.empty; i++) { %>
                                            <i class="far fa-star text-warning"></i>
                                        <% } %>
                                        <span class="rating-count">(<%= product.reviewCount %>)</span>
                                    <% } %>
                                </div>
                                <div class="product-price">
                                    <span class="current-price">Rs <%= product.price.toFixed(2) %></span>
                                    <% if (product.originalPrice && product.originalPrice > product.price) { %>
                                        <span class="original-price">Rs <%= product.originalPrice.toFixed(2) %></span>
                                        <span class="discount">-<%= Math.round(((product.originalPrice - product.price) / product.originalPrice) * 100) %>%</span>
                                    <% } %>
                                </div>
                                <div class="product-actions">
                                    <a href="/products/<%= product._id %>" class="btn btn-primary btn-sm">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>
    <% } %>

    <div class="container py-5">
        <!-- Filters and Search -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="filters-card">
                    <form method="GET" action="/products" id="filtersForm">
                        <div class="row g-3">
                            <!-- Search -->
                            <div class="col-lg-3 col-md-6">
                                <label for="search" class="form-label">üîç Search Products</label>
                                <input type="text" class="form-control" id="search" name="search" 
                                       placeholder="Search products..." value="<%= filters.search || '' %>">
                            </div>

                            <!-- Category -->
                            <div class="col-lg-2 col-md-6">
                                <label for="category" class="form-label">üìÇ Category</label>
                                <select class="form-select" id="category" name="category">
                                    <option value="all">All Categories</option>
                                    <% if (categories) { %>
                                        <% categories.forEach(cat => { %>
                                            <option value="<%= cat %>" <% if (filters && filters.category === cat) { %>selected<% } %>>
                                                <%= cat %>
                                            </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                            </div>

                            <!-- Pet Type -->
                            <div class="col-lg-2 col-md-6">
                                <label for="pet" class="form-label">üêæ Pet Type</label>
                                <select class="form-select" id="pet" name="pet">
                                    <option value="all">All Pets</option>
                                    <option value="Dog" <% if (filters && filters.pet === 'Dog') { %>selected<% } %>>Dogs</option>
                                    <option value="Cat" <% if (filters && filters.pet === 'Cat') { %>selected<% } %>>Cats</option>
                                    <option value="Bird" <% if (filters && filters.pet === 'Bird') { %>selected<% } %>>Birds</option>
                                    <option value="Fish" <% if (filters && filters.pet === 'Fish') { %>selected<% } %>>Fish</option>
                                    <option value="Rabbit" <% if (filters && filters.pet === 'Rabbit') { %>selected<% } %>>Rabbits</option>
                                </select>
                            </div>

                            <!-- Price Range -->
                            <div class="col-lg-2 col-md-6">
                                <label for="minPrice" class="form-label">üí∞ Price Range (Rs)</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="minPrice" name="minPrice" 
                                           placeholder="Min Rs" value="<%= filters.minPrice || '' %>">
                                    <input type="number" class="form-control" id="maxPrice" name="maxPrice" 
                                           placeholder="Max Rs" value="<%= filters.maxPrice || '' %>">
                                </div>
                            </div>

                            <!-- Sort -->
                            <div class="col-lg-2 col-md-6">
                                <label for="sort" class="form-label">üìä Sort By</label>
                                <select class="form-select" id="sort" name="sort">
                                    <option value="default">Default</option>
                                    <option value="price_low" <% if (filters && filters.sort === 'price_low') { %>selected<% } %>>Price: Low to High</option>
                                    <option value="price_high" <% if (filters && filters.sort === 'price_high') { %>selected<% } %>>Price: High to Low</option>
                                    <option value="rating" <% if (filters && filters.sort === 'rating') { %>selected<% } %>>Highest Rated</option>
                                    <option value="newest" <% if (filters && filters.sort === 'newest') { %>selected<% } %>>Newest First</option>
                                    <option value="popular" <% if (filters && filters.sort === 'popular') { %>selected<% } %>>Most Popular</option>
                                </select>
                            </div>

                            <!-- Filter Buttons -->
                            <div class="col-lg-1 col-md-12 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-filter"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Quick Filters -->
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="quick-filters">
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" id="onSale" name="onSale" 
                                               value="true" <% if (filters && filters.onSale) { %>checked<% } %>>
                                        <label class="form-check-label" for="onSale">üè∑Ô∏è On Sale</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" id="inStock" name="inStock" 
                                               value="true" <% if (filters && filters.inStock) { %>checked<% } %>>
                                        <label class="form-check-label" for="inStock">‚úÖ In Stock</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Admin Controls -->
        <% if (currentUser && currentUser.role === 'admin') { %>
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-end">
                    <a href="/products/admin/new" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Add New Product
                    </a>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Products Grid -->
