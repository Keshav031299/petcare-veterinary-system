                                </div>
                                <% } %>

                                <!-- Available For -->
                                <div class="product-pets mb-2">
                                    <% if (product.availableFor && product.availableFor.length > 0) { %>
                                        <% product.availableFor.forEach((pet, index) => { %>
                                            <span class="pet-tag">
                                                <% if (pet === 'Dog') { %><i class="fas fa-dog"></i>
                                                <% } else if (pet === 'Cat') { %><i class="fas fa-cat"></i>
                                                <% } else if (pet === 'Bird') { %><i class="fas fa-dove"></i>
                                                <% } else if (pet === 'Fish') { %><i class="fas fa-fish"></i>
                                                <% } else { %><i class="fas fa-paw"></i><% } %>
                                                <%= pet %>
                                            </span>
                                        <% }); %>
                                    <% } %>
                                </div>
                                
                                <!-- Price -->
                                <div class="product-price mb-3">
                                    <span class="current-price">Rs <%= product.price.toFixed(2) %></span>
                                    <% if (product.originalPrice && product.originalPrice > product.price) { %>
                                        <span class="original-price">Rs <%= product.originalPrice.toFixed(2) %></span>
                                    <% } %>
                                </div>

                                <!-- Stock Status -->
                                <div class="stock-status mb-3">
                                    <% let stockClass = 'text-success'; %>
                                    <% let stockStatus = 'In Stock'; %>
                                    <% if (product.stock === 0) { %>
                                        <% stockClass = 'text-danger'; stockStatus = 'Out of Stock'; %>
                                    <% } else if (product.stock < 5) { %>
                                        <% stockClass = 'text-warning'; stockStatus = 'Low Stock'; %>
                                    <% } %>
                                    <small class="<%= stockClass %>">
                                        <i class="fas fa-circle me-1"></i><%= stockStatus %>
                                    </small>
                                </div>

                                <!-- Quantity Controls and Add to Cart -->
                                <% if (product.inStock && product.stock > 0) { %>
                                <div class="cart-controls mb-3">
                                    <div class="quantity-controls">
                                        <button class="btn btn-outline-secondary btn-sm quantity-btn" 
                                                onclick="updateQuantity('<%= product._id %>', -1)">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                        <input type="number" class="form-control quantity-input" 
                                               id="qty-<%= product._id %>" value="1" min="1" max="<%= product.stock %>">
                                        <button class="btn btn-outline-secondary btn-sm quantity-btn" 
                                                onclick="updateQuantity('<%= product._id %>', 1)">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                <% } %>
                                
                                <!-- Actions -->
                                <div class="product-actions d-grid gap-2">
                                    <% if (product.inStock && product.stock > 0) { %>
                                        <button class="btn btn-success btn-sm add-to-cart" 
                                                data-product-id="<%= product._id %>"
                                                data-product-name="<%= product.name %>"
                                                data-product-price="<%= product.price %>">
                                            <i class="fas fa-cart-plus me-1"></i>Add to Cart
                                        </button>
                                    <% } else { %>
                                        <button class="btn btn-secondary btn-sm" disabled>
                                            <i class="fas fa-times me-1"></i>Out of Stock
                                        </button>
                                    <% } %>
                                    
                                    <a href="/products/<%= product._id %>" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye me-1"></i>View Details
                                    </a>

                                    <!-- Admin Actions -->
                                    <% if (currentUser && currentUser.role === 'admin') { %>
                                    <div class="btn-group w-100" role="group">
                                        <a href="/products/<%= product._id %>/edit" class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <form method="POST" action="/products/<%= product._id %>?_method=DELETE" style="display: inline; flex: 1;">
                                            <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12">
                    <div class="no-products text-center py-5">
                        <i class="fas fa-search fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No products found</h4>
                        <p class="text-muted">Try adjusting your search criteria or browse all categories</p>
                        <a href="/products" class="btn btn-primary">
                            <i class="fas fa-th me-2"></i>View All Products
                        </a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

