<%- include('../partials/header', { title: title }) %>

<div class="products-page">
    <!-- Hero Section -->
    <section class="products-hero">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="hero-title">üõçÔ∏è Pet Products & Supplies</h1>
                    <p class="hero-subtitle">Everything your furry, feathered, and scaled friends need to live their best lives</p>
                </div>
                <div class="col-lg-6">
                    <img src="https://images.unsplash.com/photo-1601758228041-f3b2795255f1?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                         alt="Pet supplies" class="hero-image">
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Products -->
    <% if (featuredProducts && featuredProducts.length > 0) { %>
    <section class="featured-section py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-4">
                    <h2 class="section-title">‚≠ê Featured Products</h2>
                    <p class="section-subtitle">Our most popular and recommended items</p>
                </div>
            </div>
            <div class="row g-4">
                <% featuredProducts.forEach(product => { %>
                    <div class="col-lg-3 col-md-6">
                        <div class="product-card featured">
                            <div class="product-image">
                                <% if (product.images && product.images.length > 0) { %>
                                    <img src="<%= product.images[0].url %>" alt="<%= product.images[0].alt %>" class="card-img">
                                <% } else { %>
                                    <img src="https://images.unsplash.com/photo-1601758228041-f3b2795255f1?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" 
                                         alt="<%= product.name %>" class="card-img">
                                <% } %>
                                <div class="product-badges">
                                    <span class="badge bg-warning">Featured</span>
                                    <% if (product.isOnSale) { %>
                                        <span class="badge bg-danger">Sale</span>
                                    <% } %>
                                    <% if (product.veterinarianRecommended) { %>
                                        <span class="badge bg-success">Vet Recommended</span>
                                    <% } %>
                                </div>
                            </div>
                            <div class="product-info">
                                <h5 class="product-title"><%= product.name %></h5>
                                <p class="product-brand"><%= product.brand %></p>
                                <div class="product-rating">
                                    <% if (product.rating && product.starRating) { %>
                                        <% for (let i = 0; i < product.starRating.full; i++) { %>
                                            <i class="fas fa-star text-warning"></i>
                                        <% } %>
                                        <% if (product.starRating.half > 0) { %>
                                            <i class="fas fa-star-half-alt text-warning"></i>
                                        <% } %>
                                        <% for (let i = 0; i < product.starRating.empty; i++) { %>
                                            <i class="far fa-star text-warning"></i>
                                        <% } %>
                                        <span class="rating-count">(<%= product.reviewCount %>)</span>
                                    <% } %>
                                </div>
                                <div class="product-price">
                                    <span class="current-price">$<%= product.price.toFixed(2) %></span>
                                    <% if (product.originalPrice && product.originalPrice > product.price) { %>
                                        <span class="original-price">$<%= product.originalPrice.toFixed(2) %></span>
                                        <span class="discount">-<%= Math.round(((product.originalPrice - product.price) / product.originalPrice) * 100) %>%</span>
                                    <% } %>
                                </div>
                                <div class="product-actions">
                                    <a href="/products/<%= product._id %>" class="btn btn-primary btn-sm">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>
    <% } %>

    <div class="container py-5">
        <!-- Filters and Search -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="filters-card">
                    <form method="GET" action="/products" id="filtersForm">
                        <div class="row g-3">
                            <!-- Search -->
                            <div class="col-lg-3 col-md-6">
                                <label for="search" class="form-label">üîç Search Products</label>
                                <input type="text" class="form-control" id="search" name="search" 
                                       placeholder="Search products..." value="<%= filters.search || '' %>">
                            </div>

                            <!-- Category -->
                            <div class="col-lg-2 col-md-6">
                                <label for="category" class="form-label">üìÇ Category</label>
                                <select class="form-select" id="category" name="category">
                                    <option value="all">All Categories</option>
                                    <% if (categories) { %>
                                        <% categories.forEach(cat => { %>
                                            <option value="<%= cat %>" <% if (filters && filters.category === cat) { %>selected<% } %>>
                                                <%= cat %>
                                            </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                            </div>

                            <!-- Pet Type -->
                            <div class="col-lg-2 col-md-6">
                                <label for="pet" class="form-label">üêæ Pet Type</label>
                                <select class="form-select" id="pet" name="pet">
                                    <option value="all">All Pets</option>
                                    <option value="Dog" <% if (filters && filters.pet === 'Dog') { %>selected<% } %>>Dogs</option>
                                    <option value="Cat" <% if (filters && filters.pet === 'Cat') { %>selected<% } %>>Cats</option>
                                    <option value="Bird" <% if (filters && filters.pet === 'Bird') { %>selected<% } %>>Birds</option>
                                    <option value="Fish" <% if (filters && filters.pet === 'Fish') { %>selected<% } %>>Fish</option>
                                    <option value="Rabbit" <% if (filters && filters.pet === 'Rabbit') { %>selected<% } %>>Rabbits</option>
                                </select>
                            </div>

                            <!-- Price Range -->
                            <div class="col-lg-2 col-md-6">
                                <label for="minPrice" class="form-label">üí∞ Price Range</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="minPrice" name="minPrice" 
                                           placeholder="Min" value="<%= filters.minPrice || '' %>">
                                    <input type="number" class="form-control" id="maxPrice" name="maxPrice" 
                                           placeholder="Max" value="<%= filters.maxPrice || '' %>">
                                </div>
                            </div>

                            <!-- Sort -->
                            <div class="col-lg-2 col-md-6">
                                <label for="sort" class="form-label">üìä Sort By</label>
                                <select class="form-select" id="sort" name="sort">
                                    <option value="default">Default</option>
                                    <option value="price_low" <% if (filters && filters.sort === 'price_low') { %>selected<% } %>>Price: Low to High</option>
                                    <option value="price_high" <% if (filters && filters.sort === 'price_high') { %>selected<% } %>>Price: High to Low</option>
                                    <option value="rating" <% if (filters && filters.sort === 'rating') { %>selected<% } %>>Highest Rated</option>
                                    <option value="newest" <% if (filters && filters.sort === 'newest') { %>selected<% } %>>Newest First</option>
                                    <option value="popular" <% if (filters && filters.sort === 'popular') { %>selected<% } %>>Most Popular</option>
                                </select>
                            </div>

                            <!-- Filter Buttons -->
                            <div class="col-lg-1 col-md-12 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-filter"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Quick Filters -->
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="quick-filters">
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" id="onSale" name="onSale" 
                                               value="true" <% if (filters && filters.onSale) { %>checked<% } %>>
                                        <label class="form-check-label" for="onSale">üè∑Ô∏è On Sale</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" id="inStock" name="inStock" 
                                               value="true" <% if (filters && filters.inStock) { %>checked<% } %>>
                                        <label class="form-check-label" for="inStock">‚úÖ In Stock</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Admin Controls -->
        <% if (currentUser && currentUser.role === 'admin') { %>
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-end">
                    <a href="/products/admin/new" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Add New Product
                    </a>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Products Grid -->
        <div class="row">
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                        <div class="product-card">
                            <div class="product-image">
                                <% if (product.images && product.images.length > 0) { %>
                                    <img src="<%= product.images[0].url %>" alt="<%= product.images[0].alt %>" class="card-img">
                                <% } else { %>
                                    <img src="https://images.unsplash.com/photo-1601758228041-f3b2795255f1?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" 
                                         alt="<%= product.name %>" class="card-img">
                                <% } %>
                                
                                <div class="product-badges">
                                    <% if (product.isOnSale) { %>
                                        <% let discountPercentage = 0; %>
                                        <% if (product.originalPrice && product.originalPrice > product.price) { %>
                                            <% discountPercentage = Math.round(((product.originalPrice - product.price) / product.originalPrice) * 100); %>
                                        <% } %>
                                        <span class="badge bg-danger">Sale -<%= discountPercentage %>%</span>
                                    <% } %>
                                    <% if (product.isFeatured) { %>
                                        <span class="badge bg-warning">Featured</span>
                                    <% } %>
                                    <% if (product.veterinarianRecommended) { %>
                                        <span class="badge bg-success">
                                            <i class="fas fa-user-md me-1"></i>Vet Recommended
                                        </span>
                                    <% } %>
                                    <% if (!product.inStock) { %>
                                        <span class="badge bg-secondary">Out of Stock</span>
                                    <% } %>
                                </div>
                            </div>
                            
                            <div class="product-info">
                                <div class="product-category"><%= product.category %></div>
                                <h5 class="product-title">
                                    <a href="/products/<%= product._id %>"><%= product.name %></a>
                                </h5>
                                <p class="product-brand">by <%= product.brand %></p>
                                
                                <!-- Rating -->
                                <% if (product.rating) { %>
                                <div class="product-rating mb-2">
                                    <% let fullStars = Math.floor(product.rating); %>
                                    <% let hasHalfStar = product.rating - fullStars >= 0.5; %>
                                    <% let emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0); %>
                                    
                                    <% for (let i = 0; i < fullStars; i++) { %>
                                        <i class="fas fa-star text-warning"></i>
                                    <% } %>
                                    <% if (hasHalfStar) { %>
                                        <i class="fas fa-star-half-alt text-warning"></i>
                                    <% } %>
                                    <% for (let i = 0; i < emptyStars; i++) { %>
                                        <i class="far fa-star text-warning"></i>
                                    <% } %>
                                    <span class="rating-count ms-1">(<%= product.reviewCount || 0 %>)</span>
                                </div>
                                <% } %>

                                <!-- Available For -->
                                <div class="product-pets mb-2">
                                    <% if (product.availableFor && product.availableFor.length > 0) { %>
                                        <% product.availableFor.forEach((pet, index) => { %>
                                            <span class="pet-tag">
                                                <% if (pet === 'Dog') { %><i class="fas fa-dog"></i>
                                                <% } else if (pet === 'Cat') { %><i class="fas fa-cat"></i>
                                                <% } else if (pet === 'Bird') { %><i class="fas fa-dove"></i>
                                                <% } else if (pet === 'Fish') { %><i class="fas fa-fish"></i>
                                                <% } else { %><i class="fas fa-paw"></i><% } %>
                                                <%= pet %>
                                            </span>
                                        <% }); %>
                                    <% } %>
                                </div>
                                
                                <!-- Price -->
                                <div class="product-price mb-3">
                                    <span class="current-price">$<%= product.price.toFixed(2) %></span>
                                    <% if (product.originalPrice && product.originalPrice > product.price) { %>
                                        <span class="original-price">$<%= product.originalPrice.toFixed(2) %></span>
                                    <% } %>
                                </div>

                                <!-- Stock Status -->
                                <div class="stock-status mb-3">
                                    <% let stockClass = 'text-success'; %>
                                    <% let stockStatus = 'In Stock'; %>
                                    <% if (product.stock === 0) { %>
                                        <% stockClass = 'text-danger'; stockStatus = 'Out of Stock'; %>
                                    <% } else if (product.stock < 5) { %>
                                        <% stockClass = 'text-warning'; stockStatus = 'Low Stock'; %>
                                    <% } %>
                                    <small class="<%= stockClass %>">
                                        <i class="fas fa-circle me-1"></i><%= stockStatus %>
                                    </small>
                                </div>
                                
                                <!-- Actions -->
                                <div class="product-actions d-grid gap-2">
                                    <a href="/products/<%= product._id %>" class="btn btn-primary btn-sm">
                                        <i class="fas fa-eye me-1"></i>View Details
                                    </a>

                                    <!-- Admin Actions -->
                                    <% if (currentUser && currentUser.role === 'admin') { %>
                                    <div class="btn-group w-100" role="group">
                                        <a href="/products/<%= product._id %>/edit" class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <form method="POST" action="/products/<%= product._id %>?_method=DELETE" style="display: inline; flex: 1;">
                                            <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12">
                    <div class="no-products text-center py-5">
                        <i class="fas fa-search fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No products found</h4>
                        <p class="text-muted">Try adjusting your search criteria or browse all categories</p>
                        <a href="/products" class="btn btn-primary">
                            <i class="fas fa-th me-2"></i>View All Products
                        </a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<style>
/* Products Page Styles */
.products-hero {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    color: white;
    padding: 4rem 0;
}

.hero-title {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 1rem;
}

.hero-subtitle {
    font-size: 1.2rem;
    opacity: 0.9;
}

.hero-image {
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    width: 100%;
    height: auto;
}

.section-title {
    font-size: 2.5rem;
    font-weight: bold;
    color: #2c3e50;
    margin-bottom: 0.5rem;
}

.section-subtitle {
    color: #6c757d;
    font-size: 1.1rem;
}

/* Filter Card */
.filters-card {
    background: white;
    padding: 2rem;
    border-radius: 15px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    margin-bottom: 2rem;
}

.quick-filters {
    padding-top: 1rem;
    border-top: 1px solid #e9ecef;
}

/* Product Cards */
.product-card {
    background: white;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.product-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.15);
}

.product-card.featured {
    border: 2px solid #ffc107;
}

.product-image {
    position: relative;
    overflow: hidden;
    height: 200px;
}

.card-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.product-card:hover .card-img {
    transform: scale(1.1);
}

.product-badges {
    position: absolute;
    top: 10px;
    left: 10px;
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.product-badges .badge {
    font-size: 0.7rem;
    padding: 4px 8px;
    border-radius: 20px;
}

.product-info {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
}

.product-category {
    font-size: 0.8rem;
    color: #6c757d;
    text-transform: uppercase;
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.product-title {
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
    font-weight: 600;
}

.product-title a {
    color: inherit;
    text-decoration: none;
}

.product-title a:hover {
    color: #667eea;
}

.product-brand {
    color: #6c757d;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
}

.product-rating {
    margin-bottom: 0.5rem;
}

.rating-count {
    font-size: 0.8rem;
    color: #6c757d;
}

.product-pets {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
}

.pet-tag {
    background: #f8f9fa;
    color: #6c757d;
    padding: 2px 6px;
    border-radius: 12px;
    font-size: 0.7rem;
    display: flex;
    align-items: center;
    gap: 2px;
}

.product-price {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.current-price {
    font-size: 1.25rem;
    font-weight: bold;
    color: #28a745;
}

.original-price {
    font-size: 0.9rem;
    text-decoration: line-through;
    color: #6c757d;
}

.discount {
    background: #dc3545;
    color: white;
    padding: 2px 6px;
    border-radius: 12px;
    font-size: 0.7rem;
    font-weight: bold;
}

.stock-status {
    margin-bottom: 1rem;
}

.product-actions {
    margin-top: auto;
}

/* No Products State */
.no-products {
    background: white;
    border-radius: 15px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

/* Responsive Design */
@media (max-width: 768px) {
    .hero-title {
        font-size: 2rem;
    }
    
    .section-title {
        font-size: 2rem;
    }
    
    .filters-card {
        padding: 1rem;
    }
    
    .product-info {
        padding: 1rem;
    }
}
</style>

<script>
// Auto-submit form when filters change
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('filtersForm');
    const selects = form.querySelectorAll('select');
    const checkboxes = form.querySelectorAll('input[type="checkbox"]');
    
    // Auto-submit on select change
    selects.forEach(select => {
        select.addEventListener('change', () => {
            form.submit();
        });
    });
    
    // Auto-submit on checkbox change
    checkboxes.forEach(checkbox => {
        checkbox.addEventListener('change', () => {
            form.submit();
        });
    });
});
</script>

<%- include('../partials/footer') %>